<Window x:Class="PlantsWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="RootGrid">
        <DockPanel HorizontalAlignment="Left" Height="44" LastChildFill="False" Margin="2,5,0,0" VerticalAlignment="Top" Width="264">
            <Button Name="Load" Content="Load" HorizontalAlignment="Left" Margin="10,10,0,0"
                VerticalAlignment="Top" Width="49" Height="26" Click="Load_OnClick" />

            <Button Name="Start" Content="Start" HorizontalAlignment="Left" Margin="10,11,0,0"
                VerticalAlignment="Top" Width="54" Height="26" Click="Start_OnClick" />

            <Button Content="Pause" Name="Pause" HorizontalAlignment="Left" Height="27" Margin="10,11,0,0"
                    VerticalAlignment="Top" Width="56" Click="Pause_OnClick"/>

            <ComboBox Name="WeatherBox"  Margin="10,11,0,0" HorizontalAlignment="Left"
                Width="61" Height="27" VerticalAlignment="Top"/>

        </DockPanel>
        <Grid x:Name="PlantsGrid" Margin="-14,-4,15,4">

        </Grid>
    </Grid>
</Window>
