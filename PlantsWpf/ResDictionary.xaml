<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PlantsWpf">

    <SolidColorBrush x:Key="ChartBackground" Color="LightCyan" ></SolidColorBrush>
    
    <SolidColorBrush x:Key="ServiceBackground" Color="LawnGreen"/>
    
    <SolidColorBrush x:Key="ScheduleBackground" Color="Yellow"/>
    
    <SolidColorBrush x:Key="SensorOrScheduleIsOff" Color="BurlyWood"/>
    
    <SolidColorBrush x:Key="CriticalBackground" Color="Red"/>

    <SolidColorBrush x:Key="Main" Color="White"/>

    <LinearGradientBrush x:Key="PlantsAreaBackground">
        <GradientStop Color="Green" Offset="0"/>
        <GradientStop Color="White" Offset="1"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="SensorsSystemBackground" EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
        <GradientStop Color="DarkCyan" Offset="0"/>
        <GradientStop Color="LawnGreen" Offset="1"/>
    </LinearGradientBrush>
    
</ResourceDictionary>